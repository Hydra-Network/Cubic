---
import { Search } from "@lucide/astro";
---

<aside
	class="z-30 w-72 bg-slate-950 border-r border-slate-800/50 flex-shrink-0 flex flex-col h-screen fixed top-0 left-0"
>
	<div class="p-4 border-b border-slate-800/50">
		<h1 class="text-lg font-semibold tracking-tight mb-3 text-slate-200">
			Cubic
		</h1>
		<div class="relative">
			<Search
				class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-500 size-4"
			/>
			<input
				id="sidebar_search"
				type="text"
				placeholder="Search here gang :P"
				class="w-full bg-slate-800/80 border border-slate-800 py-2 pl-9 pr-3 text-sm placeholder:text-slate-400 focus:outline-none focus:border-slate-700 focus:ring-1 focus:ring-slate-700 transition-colors"
			/>
		</div>
	</div>

	<div class="flex-1 overflow-y-auto p-3">
		<p
			class="text-xs uppercase tracking-wider text-slate-400 font-medium mb-2 px-1"
		>
			Open Games
		</p>
		<div id="opened_games" class="space-y-1">
			<p id="no_games_hint" class="text-sm text-slate-400 italic px-1 py-2">
				No games open yet
			</p>
		</div>
	</div>

	<div class="p-3 border-t border-slate-800/50">
		<button
			id="close_all_games"
			class="w-full flex items-center justify-center gap-2 bg-slate-900 hover:bg-slate-800 text-slate-400 hover:text-slate-200 py-2 px-3 text-sm transition-colors disabled:opacity-40 disabled:cursor-not-allowed"
			disabled
		>
			Close All
		</button>
	</div>
</aside>
