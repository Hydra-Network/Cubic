<div
	data-title={title}
	data-file={file_name}
	data-frame={frame}
	role="button"
	tabindex="0"
	class="game-card inline-block w-72 cursor-pointer transition-all duration-200 hover:scale-105 hover:-translate-y-1"
	style="border: 1px solid var(--border-subtle); box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);"
>
	<div
		class="game-card-image h-40 flex items-center justify-center overflow-hidden"
		style="background: var(--bg-deep);"
	>
		{
			thumb_url ? (
				<img
					src={thumb_url}
					loading="eager"
					decoding="async"
					alt={title}
					class="w-full h-full object-cover"
				/>
			) : null
		}
	</div>
	<div class="game-card-info px-4 py-3" style="background: var(--bg-card); border-top: 1px solid var(--border-subtle);">
		<h3 class="text-xl font-semibold mb-1" style="color: var(--text-primary);">{title}</h3>
		<p class="text-sm" style="color: var(--text-muted);">/{file_name}</p>
	</div>
</div>
