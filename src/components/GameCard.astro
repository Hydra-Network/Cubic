---
export interface Props {
  file_name: string;
  title: string;
  thumb: string | null;
  frame: string;
}

const { file_name, title, thumb, frame } = Astro.props;

const thumb_url = thumb
  ? `https://cdn.jsdelivr.net/gh/Hydra-Network/asseting-bromine@main/${thumb}`
  : null;
---

<div
  data-title={title}
  data-file={file_name}
  data-frame={frame}
  role="button"
  tabindex="0"
  class="game-card inline-block w-72 cursor-pointer focus:outline-none focus:ring-2 focus:ring-slate-500 transition-transform duration-200 hover:scale-105"
>
  <div class="game-card-image bg-[#1a1f2e] h-48 flex items-center justify-center overflow-hidden">
    {
      thumb_url ? (
        <img
          src={thumb_url}
          loading="eager"
          decoding="async"
          alt={title}
          class="w-full h-full object-cover"
        />
      ) : null
    }
  </div>
  <div class="game-card-info bg-[#2a2f3e] px-4 py-3">
    <h3 class="text-white text-2xl font-bold mb-1">{title}</h3>
    <p class="text-slate-400 text-sm">/{file_name}</p>
  </div>
</div>
