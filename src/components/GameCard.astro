---
export interface Props {
  file_name: string;
  title: string;
  thumb: string | null;
  frame: string;
}

const { file_name, title, thumb, frame } = Astro.props;

const thumb_url = thumb
  ? `https://cdn.jsdelivr.net/gh/Hydra-Network/asseting-bromine@main/${thumb}`
  : null;
---

<div
  data-title={title}
  data-file={file_name}
  data-frame={frame}
  role="button"
  tabindex="0"
  class="game-card inline-block w-72 cursor-pointer transition-all duration-200 hover:scale-105 hover:-translate-y-1 border border-subtle shadow-xl"
>
  <div
    class="game-card-image h-40 flex items-center justify-center overflow-hidden bg-deep"
  >
    {
      thumb_url ? (
        <img
          src={thumb_url}
          loading="lazy"
          decoding="async"
          alt={title}
          class="w-full h-full object-cover"
        />
      ) : null
    }
  </div>
  <div class="game-card-info px-4 py-3 bg-card border border-subtle">
    <h3 class="text-xl font-semibold mb-1 text-primary">
      {title}
    </h3>
    <p class="text-sm text-muted">/{file_name}</p>
  </div>
</div>
