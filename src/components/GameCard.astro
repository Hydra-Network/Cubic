---
export interface Props {
  file_name: string;
  title: string;
  thumb: string | null;
  frame: string;
}

const { file_name, title, thumb, frame } = Astro.props;

const thumb_url = thumb
  ? `https://cdn.jsdelivr.net/gh/Hydra-Network/asseting-bromine@main/${thumb}`
  : null;
---

<div
  data-title={title}
  data-file={file_name}
  data-frame={frame}
  role="button"
  tabindex="0"
  class="game-card bg-slate-900 border border-slate-700 rounded-xl p-4 inline-block w-72 text-center shadow-sm transition-transform duration-200 hover:scale-105 cursor-pointer focus:outline-none focus:ring-2 focus:ring-slate-500"
>
  {
    thumb_url ? (
      <img
        src={thumb_url}
        loading="eager"
        decoding="async"
        alt={title}
        height="230"
        width="230"
        class="w-full h-48 object-cover rounded-lg mb-3"
      />
    ) : (
      <div class="w-full h-48 rounded-lg bg-slate-800 mb-3 flex items-center justify-center">
        <p class="text-slate-500">No Image</p>
      </div>
    )
  }
  <h3 class="mt-2 text-xl font-bold truncate">{title}</h3>
</div>
