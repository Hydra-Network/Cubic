---
export interface Props {
	file_name: string;
	title: string;
	thumb: string | null;
	frame: string;
}

const { file_name, title, thumb, frame } = Astro.props;

const thumb_url = thumb
	? `https://cdn.jsdelivr.net/gh/Hydra-Network/asseting-bromine@main/${thumb}`
	: null;
---

